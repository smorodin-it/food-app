{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@food-app/backend/cls-store": ["libs/backend/cls-store/src/index.ts"],
      "@food-app/backend/core": ["libs/backend/core/src/index.ts"],
      "@food-app/backend/features/auth": [
        "libs/backend/features/auth/src/index.ts"
      ],
      "@food-app/backend/features/ingredient": [
        "libs/backend/features/ingredient/src/index.ts"
      ],
      "@food-app/backend/features/user": [
        "libs/backend/features/user/src/index.ts"
      ],
      "@food-app/backend/orm": ["libs/backend/orm/src/index.ts"],
      "@food-app/frontend/data-access/auth": [
        "libs/frontend/data-access/auth/src/index.ts"
      ],
      "@food-app/frontend/data-access/https": [
        "libs/frontend/data-access/https/src/index.ts"
      ],
      "@food-app/frontend/features/auth": [
        "libs/frontend/features/auth/src/index.ts"
      ],
      "@food-app/frontend/ui": ["libs/frontend/ui/src/index.ts"],
      "@food-app/frontend/utils": ["libs/frontend/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
